{% extends 'BloggerBlogBundle::Post/show.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/bloggerblog/css/post.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="row single-post" id="content">
        <article class="post">
            <header>
                <div class="date"><time datetime="{{ post.created|date('c') }}">{{ post.created|date('l, F j, Y') }}</time></div>
                <h2>{{ post.title }}</h2>
            </header>
            <img src="{{ asset(['images/', post.image]|join) }}" alt="{{ post.title }} image not found" class="large" />
            <div>
                <p>{{ post.content }}</p>
            </div>
        </article>
        
        <ul>
            <li>
                <a href="{{ path('post_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('post_edit', { 'id': post.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>

{% endblock %}
