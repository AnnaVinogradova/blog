{% extends 'base.html.twig' %}

{% block body %}
    <h3>Markers</h3>
        <ul>
            <li>
                <a href="{{ path('mapresolver_index', { 'id': id }) }}">Resolvers</a>
            </li>
        </ul>
    <div class="row">
        <div class="col-md-8">
            <div id="map" style="width: 100%; height: 400px;"></div>
        </div>
        <div class="col-md-4">
            <h3>All markers</h3>
            <ul id="marker-list">
                
            </ul>
        </div>
    </div>

    <div id="modalBox" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    Create marker
                </div>
                <div class="modal-body edit-form">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <input type="submit" value="Save" />
                    {{ form_end(form) }}
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
    <script src="http://maps.google.com/maps/api/js?sensor=false"></script>

    <script>
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 1,
          center: new google.maps.LatLng(0, 0),
          mapTypeId: google.maps.MapTypeId.ROADMAP
        });

        map.addListener('dblclick', function(e){
            $("#modalBox").modal('show');
            var field = document.getElementById('marker_lat');
            field.value = e.latLng.lat();
            field.setAttribute('type', 'hidden');
            field = document.getElementById('marker_lng');
            field.value = e.latLng.lng();
            field.setAttribute('type', 'hidden');
        });

        var infowindow = new google.maps.InfoWindow();
        var list, li;

        {% for marker in markers %} 
            marker = new google.maps.Marker({
                position: new google.maps.LatLng({{marker.lat}}, {{marker.lng}}),
                map: map
              });

            google.maps.event.addListener(marker, 'click', (function(marker) {
                return function() {
                  infowindow.setContent('{{marker.title}}');
                  infowindow.open(map, marker);
                }
              })(marker));

            list = document.getElementById('marker-list');
            li = document.createElement("li");
            li.appendChild(document.createTextNode("{{marker.title}}"));
            list.appendChild(li);
            li.addEventListener("click", function(){
                map.setZoom(6);
                map.setCenter(new google.maps.LatLng({{marker.lat}}, {{marker.lng}}));
            });

        {% endfor %}
    </script>

{% endblock %}
