{% extends 'base.html.twig' %}

{% block body %}
    <h1>WallPost</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ wallPost.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ wallPost.content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if wallPost.date %}{{ wallPost.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ wallPost.img }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('wallpost_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('wallpost_edit', { 'id': wallPost.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
