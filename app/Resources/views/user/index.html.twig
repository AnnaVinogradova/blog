{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/bloggerblog/css/user.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <h3>User list</h3>

    <div id="content">
        <ul>
            <li>
                <a href="{{ path('user_new') }}">Create a new entry</a>
            </li>
        </ul>
         <ul class="user-list">
            {% for user in users %}
            <li>
                User: {{ user.username }}<br>
                Email: {{ user.email }}<br> 
                <ul class="inner-menu">       
                    <li>
                        <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                    </li> 
                </ul>
            </li>    
            {% endfor %}
        </ul>    
    </div>
{% endblock %}
