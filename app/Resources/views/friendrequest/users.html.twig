{% extends 'base.html.twig' %}

{% block body %}
    <h3>Users</h3>
    <div id="content">
        <div class="edit-form">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <input type="submit" value="Find" />
            {{ form_end(form) }}
        </div>
        {% if list is defined %}
            <h3>User 
                {% for request in list %}
                        <a href="{{ path('wall_index', { 'id': request.wall.id }) }}">{{ request }}</a>
                {% endfor %}
            </h3>
        {% else %}
            <h3>User doesn't exist</h3>
        {% endif %}
    </div>
{% endblock %}
